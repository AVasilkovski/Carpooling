@{ 
    ViewData["Title"] = "Create";
    var Params = new Dictionary<string, string>()
    {
        { "travelId", ViewData["Travel"].ToString() },
        { "userToId", ViewData["UserTo"].ToString() }
    };
}

@model Carpooling.Web.Models.FeedbackCreateViewModel

<div class="container">
    <form asp-action="Create" asp-all-route-data="Params" method="post">
        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Write your comment</h5>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Rating">Rating</label>
                <input class="form-control" type="number" asp-for="Rating" name="rating" value="" placeholder="Fives are the best"/>
                <span asp-validation-for="Rating"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Comment">Comment</label>
                <input class="form-control" type="text" asp-for="Comment" name="comment" value="" placeholder="Good stuff" />
                <span asp-validation-for="Comment"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Comment</button>
    </form>
</div>